{
  "theme": {
    "background": {
      "main": "#1a1a1a",
      "card": "rgba(24, 25, 43, 0.70)",
      "glassmorphismOverlay": "rgba(24, 25, 43, 0.70)",
      "section": "#1a1a1a"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B0B0B0",
      "muted": "#6B7280",
      "accent": "#F472B6",
      "highlight": "#FBBF24",
      "link": "#38BDF8",
      "danger": "#EF4444",
      "success": "#4ADE80",
      "gray": "#A3A3A3"
    },
    "colors": {
      "purple": "#a78bfa",
      "pink": "#f472b6",
      "yellow": "#fbbf24",
      "blue": "#38bdf8",
      "green": "#4ade80",
      "gray-800": "#1F2937",
      "gray-700": "#374151",
      "gray-600": "#4B5563",
      "gray-400": "#9CA3AF",
      "gray-300": "#D1D5DB",
      "red": "#EF4444"
    },
    "gradients": {
      "badge": "linear-gradient(90deg, #a78bfa 0%, #f472b6 60%, #fbbf24 100%)",
      "cardTopLeft": "radial-gradient(circle at 40% 40%, #a78bfa 0%, #f472b6 60%, transparent 100%)",
      "cardBottomRight": "radial-gradient(circle at 60% 60%, #38bdf8 0%, #a78bfa 60%, transparent 100%)",
      "statusBarLeft": "radial-gradient(circle at 40% 40%, #a78bfa 0%, #f472b6 60%, transparent 100%)",
      "profileCardBehind": "linear-gradient(135deg, #a78bfa 0%, #f472b6 100%)",
      "profileCardInner": "radial-gradient(circle at 60% 40%, #fbbf24 0%, #f472b6 100%)"
    },
    "shadows": {
      "card": "0 8px 40px 0 rgba(80,0,255,0.10), 0 1.5px 8px 0 rgba(0,0,0,0.18)",
      "cardHover": "0 16px 48px 0 rgba(80,0,255,0.22), 0 2px 12px 0 rgba(0,0,0,0.28)",
      "statusBar": "0 4px 24px 0 rgba(80,0,255,0.10), 0 1.5px 8px 0 rgba(0,0,0,0.12)",
      "profileCard": "0 8px 24px rgba(0, 0, 0, 0.4)",
      "portfolioCard": "0 4px 16px rgba(0,0,0,0.18)",
      "badge": "0 2px 12px 0 rgba(168,85,247,0.18)",
      "textGlow": "0_2px_8px_rgba(168,139,250,0.4)"
    },
    "borders": {
      "card": "1px solid rgba(255,255,255,0.20)",
      "badge": "1px solid rgba(255,255,255,0.20)",
      "profileCard": "4px solid #4A4A4A"
    },
    "radii": {
      "card": "1.5rem",
      "statusBar": "9999px",
      "profileCard": "12px",
      "portfolioCard": "0.75rem",
      "avatar": "50%"
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, sans-serif",
        "heading": "DM Serif Text, serif",
        "mono": "monospace"
      },
      "fontWeight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800,
        "black": 900
      },
      "sizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem",
        "7xl": "4.5rem"
      },
      "letterSpacing": {
        "wide": "0.04em",
        "wider": "0.08em"
      }
    },
    "spacing": {
      "sectionY": ["4rem", "6rem", "8rem"],
      "sectionX": ["1rem", "2.5rem", "5rem"],
      "cardPadding": "2rem",
      "statusBarPadding": "0.75rem 1.5rem"
    },
    "keyframes": {
      "float": {
        "0%": { "transform": "translateY(0px)", "box-shadow": "0 8px 40px 0 rgba(80,0,255,0.18), 0 1.5px 8px 0 rgba(0,0,0,0.22)" },
        "50%": { "transform": "translateY(-16px)", "box-shadow": "0 16px 48px 0 rgba(80,0,255,0.22), 0 2px 12px 0 rgba(0,0,0,0.28)" },
        "100%": { "transform": "translateY(0px)", "box-shadow": "0 8px 40px 0 rgba(80,0,255,0.18), 0 1.5px 8px 0 rgba(0,0,0,0.22)" }
      }
    },
    "components": {
      "header": {
        "background": "transparent",
        "textGradient": "linear-gradient(90deg, #a78bfa 0%, #f472b6 60%, #fbbf24 100%)",
        "navLink": {
          "color": "#9CA3AF",
          "hoverColor": "#FFFFFF"
        }
      },
      "hero": {
        "background": "#1a1a1a",
        "headingFont": "DM Serif Text, serif",
        "headingColor": "#FFFFFF",
        "highlightColor": "#FBBF24",
        "subtextColor": "#D1D5DB"
      },
      "about": {
        "background": "#1a1a1a",
        "headingColor": "#a78bfa",
        "highlightColor": "#4ADE80",
        "profileCard": {
          "background": "#1A1A1A",
          "behindGradient": "linear-gradient(135deg, #a78bfa 0%, #f472b6 100%)",
          "innerGradient": "radial-gradient(circle at 60% 40%, #fbbf24 0%, #f472b6 100%)",
          "shadow": "0 8px 24px rgba(0, 0, 0, 0.4)",
          "border": "4px solid #4A4A4A"
        }
      },
      "skills": {
        "background": "#1a1a1a",
        "badge": {
          "background": "#374151",
          "color": "#E5E7EB",
          "hoverBackground": "#4B5563"
        }
      },
      "portfolio": {
        "background": "#1a1a1a",
        "card": {
          "background": "#1F2937",
          "shadow": "0 4px 16px rgba(0,0,0,0.18)",
          "hoverScale": 1.05,
          "titleColor": "#E5E7EB",
          "descColor": "#9CA3AF",
          "techBadge": {
            "background": "#a78bfa",
            "color": "#FFFFFF"
          }
        }
      },
      "contact": {
        "background": "#1a1a1a",
        "headingColor": "#FFFFFF",
        "highlightColor": "#FBBF24",
        "button": {
          "background": "#FBBF24",
          "color": "#0A0A0A",
          "hoverBackground": "#FDE68A"
        },
        "link": {
          "color": "#9CA3AF",
          "hoverColor": "#FFFFFF"
        }
      },
      "footer": {
        "background": "transparent",
        "textColor": "#6B7280",
        "heartColor": "#EF4444"
      },
      "dashboard": {
        "mainCard": {
          "background": "rgba(24, 25, 43, 0.70)",
          "border": "1px solid rgba(255,255,255,0.20)",
          "shadow": "0 8px 40px 0 rgba(80,0,255,0.10), 0 1.5px 8px 0 rgba(0,0,0,0.18)",
          "floating": true,
          "neonGlow": "radial-gradient(circle at 40% 40%, #a78bfa 0%, #f472b6 60%, transparent 100%)"
        },
        "statusBar": {
          "background": "rgba(24, 25, 43, 0.70)",
          "border": "1px solid rgba(255,255,255,0.20)",
          "shadow": "0 4px 24px 0 rgba(80,0,255,0.10), 0 1.5px 8px 0 rgba(0,0,0,0.12)",
          "floating": true,
          "neonGlow": "radial-gradient(circle at 40% 40%, #a78bfa 0%, #f472b6 60%, transparent 100%)"
        },
        "badge": {
          "gradient": "linear-gradient(90deg, #a78bfa 0%, #f472b6 60%, #fbbf24 100%)",
          "textColor": "#FFFFFF",
          "shadow": "0 2px 12px 0 rgba(168,85,247,0.18)",
          "border": "1px solid rgba(255,255,255,0.20)"
        },
        "grainOverlay": {
          "image": "https://grainy-gradients.vercel.app/noise.svg",
          "opacity": 0.18
        }
      }
    }
  }
}
